<section id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
					<h2>Login</h2>
					<hr class="star-primary">

					<%= form_tag '/login' do %>

					  <div class="field">Email: <%= text_field_tag :email %></div>
					  <div class="field">Password: <%= password_field_tag :password %> </div>
					  
					  <%= submit_tag "Submit" %>

					<% end %>

				</div>
			</div>
		</div>
</section>