<p id="notice"><%= notice %></p>

<h1>Les annonces</h1>

<table>
  <thead>
    <tr>
      <th>Utilisateur</th>
      <th>Titre de l'article</th>
      <th>Description de l'article</th>
      <th>Prix</th>
      <th>Lieu de rencontre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.user.first_name %> <%= ad.user.last_name %></td>
        <td><%= ad.name %></td>
        <td><%= ad.description %></td>
        <td><%= ad.price %></td>
        <td><%= ad.address %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

